<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_weather"
        tools:context=".weather.WeatherActivity">

        <ImageView
            android:id="@+id/icWeather"
            android:layout_width="140dp"
            android:layout_height="141dp"
            android:layout_marginTop="68dp"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toTopOf="@+id/tvRuzgarHizi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.287"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@android:drawable/stat_sys_warning" />

        <TextView
            android:id="@+id/tvAciklama"
            android:layout_width="158dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="108dp"
            android:fontFamily="sans-serif-black"
            android:text="broken clouds"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/icWeather"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />

        <TextView
            android:id="@+id/tvRuzgarHizi"
            android:layout_width="303dp"
            android:layout_height="41dp"
            android:layout_marginTop="52dp"
            android:text="10.3"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.851"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvAciklama" />

        <TextView
            android:id="@+id/tvSicaklik"
            android:layout_width="223dp"
            android:layout_height="160dp"
            android:layout_marginTop="228dp"
            android:layout_marginBottom="47dp"
            android:text="14.5"
            android:textSize="86sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.586"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRuzgarHizi" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.079" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>