<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/bottom_home_selector" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="100dp"
                        android:layout_marginStart="10dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipFirstRoof"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/at_1"
                            app:checkedIconVisible="true"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/ivFirstRoof"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="8dp"
                            app:layout_constraintEnd_toEndOf="@+id/chipFirstRoof"
                            app:layout_constraintStart_toStartOf="@+id/chipFirstRoof"
                            app:layout_constraintTop_toBottomOf="@+id/chipFirstRoof"
                            app:srcCompat="@drawable/ic_broken_roof" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSecondRoof"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Çatı 2"
                            app:checkedIconVisible="true"
                            app:chipIcon="@drawable/ic_baseline_home_24"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/ivSecondRoof"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            app:layout_constraintEnd_toEndOf="@+id/chipSecondRoof"
                            app:layout_constraintStart_toStartOf="@+id/chipSecondRoof"
                            app:layout_constraintTop_toBottomOf="@+id/chipSecondRoof"
                            app:srcCompat="@drawable/ic_broken_roof"
                            tools:layout_editor_absoluteY="48dp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>